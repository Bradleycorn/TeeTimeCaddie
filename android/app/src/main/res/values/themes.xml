<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Allows us to override night specific attributes in the
         values-night folder. -->
    <style name="NightAdjusted.Theme.TeeTimeCaddie" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- Allows us to override platform level specific attributes in their
         respective values-vXX folder. -->
    <style name="PlatformAdjusted.Theme.TeeTimeCaddie" parent="NightAdjusted.Theme.TeeTimeCaddie">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.TeeTimeCaddie" parent="PlatformAdjusted.Theme.TeeTimeCaddie" />
</resources>